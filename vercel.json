{
  "version": 2,
  "name": "shinsei-management",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "cd frontend && npm install",
  "env": {
    "REACT_APP_DEMO_MODE": "true",
    "REACT_APP_API_URL": "https://demo-api.example.com/api/v1",
    "REACT_APP_SITE_URL": "https://shinsei-management.vercel.app"
  }
}
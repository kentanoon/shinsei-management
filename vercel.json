{
  "version": 2,
  "name": "shinsei-management",
  "buildCommand": "npm install && cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CI": "false",
    "DISABLE_ESLINT_PLUGIN": "true",
    "TSC_COMPILE_ON_ERROR": "true",
    "ESLINT_NO_DEV_ERRORS": "true"
  }
}
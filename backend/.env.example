# Database Configuration
DATABASE_URL=postgresql://shinsei_user:password123@localhost:5432/shinsei_management
# For SQLite (development): sqlite:///./data/application.db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Email Configuration
EMAIL_PROVIDER=smtp
# Options: smtp, sendgrid, aws_ses

# SMTP Settings (if using SMTP)
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@example.com

# SendGrid Settings (if using SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@example.com

# AWS SES Settings (if using AWS SES)  
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@example.com
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Google Forms Integration
GOOGLE_FORMS_API_KEY=
GOOGLE_SERVICE_ACCOUNT_FILE=

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["pdf", "doc", "docx", "xls", "xlsx", "jpg", "jpeg", "png"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# Redis (for caching, optional)
REDIS_URL=redis://localhost:6379/0

# PostgreSQL (for Docker)
POSTGRES_DB=shinsei_management
POSTGRES_USER=shinsei_user
POSTGRES_PASSWORD=password123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432